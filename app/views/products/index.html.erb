<h1>ALL OF OUR PRODUCTS</h1>

<table>
  <% @products.each do |p| %>
  <tr>
  	<td>
  	<%= p.id %>&nbsp;&nbsp;
    </td>
  	<td>
  	<%= p.price %>
    </td>
  	<td>
  	&nbsp;&nbsp;<%= link_to p.name, product_path(p) %>
    </td>
    <td>
    &nbsp;&nbsp;<%= p.description %>
    </td>
  </tr>
  <% end %>

</table>